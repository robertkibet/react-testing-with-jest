{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": 0,
    "react/jsx-filename-extension": [
      2,
      {"extensions": [".js", ".jsx", ".ts", ".tsx"]}
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.spec.js",
        "**/*.spec.jsx",
        "**/*.test.jsx",
        "**/*.test.js"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
